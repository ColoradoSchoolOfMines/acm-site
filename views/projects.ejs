<% layout('layouts/base')%>

<div class="content">
    <h1>Projects</h1>
    <p>Projects are a great way to get involved with Mines ACM! Apply existing knowledge
        and learn new skills with our variety of projects.</p>
            
    <% for(let project of projects) { %>
        <div class="large-card">
            <p>
                <%= project.title %>
                <%= project.description %>
                <%= project.repository %>
                <%= project.website %>
                <%= project.authors %>
                <%= project.archived %>
            </p>
        </div>
    <% } %>
</div>
