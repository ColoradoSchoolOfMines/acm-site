<div class="content">
    <h1>Previous Meetings</h1>
    <div class="meeting-scroll">
        <% for(let meeting of previous) { %>   
            <div class="meeting">
                <p><strong><%= meeting.title %></strong> - <%= meeting.description %></p>
                <p><strong>Date</strong>: <span class="date"><%= meeting.date %>,<%= meeting.duration %></span></p>
                <p><strong>Location</strong>: <%= meeting.location %></p>
            </div>
        <% } %>    
