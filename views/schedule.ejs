<% layout('layouts/base')%>

<div class="container bg-light">
    <div class="center-content">
        <h1 class="acm-blue">Upcoming Meetings</h1>
        <% for(let meeting of upcoming) { %>
            <div class="meeting-box shadow">
                <div class="meeting-box-header">
                    <p class="d-inline-block"><%= meeting.title %></p>
                </div>

                <div style="padding: 25px;">
                    <p><%= meeting.description %></p>
                </div>

                <div class="meeting-box-footer">
                    <p style="color: black; text-align: center; font-size: 18px;">
                        <span class="date"><%= meeting.date %>,<%= meeting.duration %></span> in <%= meeting.location %>
                        <% if(meeting.rsvped) { %>
                            <p>(RSVP'ed)</p>
                        <% } else { %>
                            <button class="d-inline-block btn btn-outline-primary rsvp"><a href="/rsvp?meeting=<%= meeting.id %>">RSVP</a></button>
                        <% } %>
                    </p>
                </div>
            </div>
        <% } %>
        <p>
            Sync our calendar with yours! <code>https://acm.mines.edu/schedule/ical.ics</code>
            <a target="_blank" href="https://support.google.com/calendar/answer/37100#add_via_link">(Instructions)</a>
        </p>
    </div>

