<% layout('layouts/base')%>

<div class="content">
    <div class="large-card">
        <h1><%= user.name %></h1>
        <% if(user.title.length > 0) { %>
            <h2><%= user.title%></h2>
        <% } %>

        <% if (user.avatar_id) { %>
            <img class="profile-picture" src="uploads/<%= user.avatar_id %>" />
        <% } else { %>
            <img class="profile-picture" src="static/images/default_user.png" />
        <% } %>
        <h5>Update Profile Picture</h5>
        <form method="POST" action="/profile" enctype="multipart/form-data">
            <input class="d-inline-block mb-1" type="file" name="avatar" accept="image/png,image/jpg,image/jpeg" required />
            <p>Images must be under 5 MB and of JPG/JPEG/PNG type.</p>
            <br>
            <button class="btn d-inline-block btn-primary mt-1" accept="image/png,image/jpg,image/jpeg">Submit</button>
        </form>
    </div>
</div>
